  transition: all var(--siae-transition-fast);
}

.modal-input-group input:focus,
.modal-input-group select:focus {
  outline: none;
  border-color: var(--siae-primary-blue);
  box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
}

.modal-input-group input::placeholder {
  color: var(--siae-text-tertiary);
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--siae-spacing-sm);
  padding-top: var(--siae-spacing-md);
